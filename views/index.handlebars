<h1>Burgs</h1>

<hr>

<h2>Burgs yet to be consumed</h2>

<ul>
  {{#each burgs}}
    {{#unless eaten}}
      {{> burgs/burg-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgs consumed</h2>

<ul>
  {{#each burgs}}
    {{#if eaten}}
      {{> burgs/burg-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burg</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burg Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> Uneaten
  </div>

  <button type="submit">Add burg</button>
</form>
